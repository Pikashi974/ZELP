{% block title %}Adresse index{% endblock %}

{% block body %}
    <h1>Adresse index</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Numero_rue</th>
                <th>Rue</th>
                <th>Code</th>
                <th>Commune</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                {# <td>{{ adresse.id }}</td> #}
                <td>{{ adresse.numeroRue }}</td>
                <td>{{ adresse.rue }}</td>
                <td>{{ adresse.code }}</td>
                <td>{{ adresse.commune }}</td>
                <td>
